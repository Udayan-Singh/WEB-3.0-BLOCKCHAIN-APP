<%- include('includes/head.ejs', { title: 'Dashboard' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
  <link rel="icon" href="/public/favicon.ico">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
    crossorigin="anonymous"></script>
  </head>
  <style>
    body {
      display: flex;
      flex-direction: column;
    }

    .first-section {
      background-color: #191825;
      height: 52vh;
      display: flex;
      flex-direction: row;
      justify-content: space-evenly;
      padding: 20px;
    }

    .carousel-box {
      width: 60%;
      border-radius: 10px;
    }

    .carousel-item img {
      height: 400px;
      border-radius: 10px;
    }

    .coin-stats {
      width: 30%;
      height: 400px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      border-radius: 10px;
    }
    .services{
      background-color: #191825;
      height: 40vh;
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      padding: 20px;
      flex-wrap: wrap;
    }
    .card-text{
      text-align: justify;
      font-size: 15px;
    }
    .coin-stats img{
      width: 100%;
      height: 100%;
      border-radius: 10px;
    }
    .card{
      height: 200px;
    }
  </style>

  <body>
    <%- include('includes/header.ejs') %>

      <div class="first-section">
        <div class="carousel-box">
          <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  src="https://www.coindesk.com/resizer/Kt7zesxdDqCDDVaIBHhSgULe2yk=/1200x628/center/middle/cloudfront-us-east-1.images.arcpublishing.com/coindesk/YPAFPVTWFZECVBFWHPE6MV2QX4.png"
                  class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="https://www.reviewgeek.com/p/uploads/2018/05/4500dcfd.jpg?height=200p&trim=2,2,2,2"
                  class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img
                  src="/Background/logo.png"
                  class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img
                  src="https://coindcx.com/blog/wp-content/uploads/2022/12/12-22-Twitter-adds-BTC-ETH-price-charts-to-its-search-1024x614.png"
                  class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="coin-stats">
          <img src="https://media1.giphy.com/media/URU2K6jSdHPlHB135v/giphy.gif?cid=ecf05e47uioju1mmm9rftmcz2zft3tx5ucx8wvysdbe3wf95&rid=giphy.gif&ct=g" alt="gif">
        </div>
      </div>

      <div class="services">
        <div class="card text-bg-dark" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Send Ethereum</h5>
            <p class="card-text">Send Ethereum easily with integration of Metamask wasllet and view all your transactions in one place.</p>
            <a href="http://localhost:3000/" class="btn btn-primary" target="_blank">Send Ethers</a>
          </div>
        </div>

        <div class="card text-bg-dark" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">See Prices</h5>
            <p class="card-text">Check Realtime Prices of all the major coins in a wasy to analyse UI.</p>
            <a href="http://localhost:4500/" class="btn btn-primary" target="_blank">See Prices</a>
          </div>
        </div>

        <div class="card text-bg-dark" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Check Balance</h5>
            <p class="card-text">See balance of your ethereum wallet. Supports mainnet and all popular test networks.</p>
            <a href="http://localhost:4000/" class="btn btn-primary" target="_blank">Check Now</a>
          </div>
        </div>

        <div class="card text-bg-dark" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Mine Ethereum</h5>
            <p class="card-text">A dummy Mining web app that uses the SHA256 algorithm that requires high computing power and resources.</p>
            <a href="http://localhost:3500/" class="btn btn-primary" target="_blank">Mine now</a>
          </div>
        </div>
      </div>

  </body>

  </html>